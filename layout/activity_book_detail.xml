<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header con botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- Botón Back -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_back_24px"
            android:background="?attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:contentDescription="Atrás" />

        <!-- Espaciador -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Botón Favorito -->
        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_favorite"
            android:background="?attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:contentDescription="Favorito"
            android:layout_marginEnd="8dp" />

        <!-- Botón Compartir -->
        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_share"
            android:background="?attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:contentDescription="Compartir" />

    </LinearLayout>

    <!-- Divisor -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone" />

    <!-- ScrollView con contenido -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Portada del libro -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/coverImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:contentDescription="Portada del libro" />

            </FrameLayout>

            <!-- Título -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del Libro"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Autor -->
            <TextView
                android:id="@+id/authorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Por Autor del Libro"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Categoría -->
            <TextView
                android:id="@+id/categoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ficción"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="16dp" />

            <!-- Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3.5"
                    android:isIndicator="true"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />

                <TextView
                    android:id="@+id/ratingCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5★ (245 reseñas)"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Divisor -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="16dp" />

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando descripción..."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"
                android:justificationMode="inter_word" />

            <!-- Divisor -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="16dp" />

            <!-- Información adicional -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Editorial -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Editorial:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_weight="0.3" />

                    <TextView
                        android:id="@+id/publisherText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Editorial desconocida"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_weight="0.7" />

                </LinearLayout>

                <!-- Año de publicación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Publicado:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_weight="0.3" />

                    <TextView
                        android:id="@+id/publishYearText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Año desconocido"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_weight="0.7" />

                </LinearLayout>

                <!-- Páginas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Páginas:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_weight="0.3" />

                    <TextView
                        android:id="@+id/pagesText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Desconocido"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_weight="0.7" />

                </LinearLayout>

            </LinearLayout>

            <!-- Botón Comprar -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Comprar libro en físico"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>